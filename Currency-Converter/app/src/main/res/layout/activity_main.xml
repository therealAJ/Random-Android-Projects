<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="me.alexjordache.currency_converter.MainActivity">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/moneyImage"
        android:layout_marginTop="-150dp"
        android:src="@drawable/money"
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/moneyImage"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="100dp"
        android:text="Enter the amount in dollars"
        />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/currencyInput"
        android:layout_alignBottom="@+id/moneyImage"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="30dp" />

    <Button
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/currencyInput"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        android:text="Convert!"
        android:onClick="clickConvert"
        />


</RelativeLayout>
